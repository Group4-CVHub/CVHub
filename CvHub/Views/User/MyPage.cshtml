
<link rel="stylesheet" href="~/css/myPage/MyPage.css" />
<link rel="images" href="~/css/myPage/images" />
<script src="~/js/MyPage/MyPage.js"></script>

<div class="container rounded shadow p-3 bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-3 border-right">
            <div class=" d-flex flex-column align-items-center text-center">
                <img class="rounded-circle" src="/css/myPage/images/avatar.png" id="photo" width="90">
                <span class="font-weight-bold">Vivi Tran</span>
                <span class="text-black-50">hejhej@gmail.com</span>
                <span>Sweden</span>
            </div>
            <div class="mt-5 text-center"><button class="btn btn-outline-primary profile-button" type="button">My CVs</button></div>
        </div>
        <div class="col-md-6">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="text-right">My Page</h6>
                </div>
                <div class="row mt-3">
                    <div class="profile-form col-md-6">
                        <label class="labels">First Name</label>
                        <input type="text" class="form-control" placeholder="first name">
                    </div>
                    <div class="profile-form col-md-6">
                        <label class="labels">Surname</label>
                        <input type="text" class="form-control" placeholder="last name">
                    </div>
                    <div class="profile-form col-md-12">
                        <label class="labels">Email</label>
                        <input type="email" class="form-control" placeholder="email">
                    </div>
                    <div class="profile-form col-md-12">
                        <label class="labels">Address</label>
                        <input type="text" class="form-control" placeholder="address">
                    </div>
                    <div class="profile-form col-md-12">
                        <label class="labels">Education</label>
                        <input type="text" class="form-control" placeholder="education">
                    </div>
                    <div class="profile-form col-md-6">
                        <label class="labels">Country</label>
                        <input type="text" class="form-control" placeholder="country">
                    </div>
                    <div class="profile-form col-md-6">
                        <label class="labels">State/Region</label>
                        <input type="text" class="form-control" placeholder="state/region">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
