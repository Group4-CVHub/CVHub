@model CVHub.Models.User

<link rel="stylesheet" href="~/css/myPage/MyPage.css" />
<link rel="images" href="~/css/myPage/images" />
<script src="~/js/MyPage/MyPage.js"></script>

<div class="container rounded shadow p-3 bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-3 border-right">
            <div class=" d-flex flex-column align-items-center text-center">
                <img class="rounded-circle" src="/css/myPage/images/avatar.png" id="photo" width="90">
                <span class="font-weight-bold">@Model.FirstName @Model.LastName</span>
                <span class="text-black-50">@Model.Email</span>
                <span>@Model.Country</span>
            </div>
            <div class="mt-5 text-center"><a class="btn btn-outline-primary profile-button" asp-controller="Cv" asp-action="CvList" type="button">My CVs</a></div>
        </div>
        <div class="col-md-6">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="text-right">My Page</h6>
                </div>
                <form method="post" asp-action="Update">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="UserId" value="@Model.UserId" type="hidden" />
                    <input asp-for="Password" value="@Model.Password" type="hidden" />
                    <div class="row mt-3">
                        <div class="profile-form col-md-6">
                            <label class="labels">First name</label>
                            <input asp-for="FirstName" type="text" class="form-control" placeholder="@Model.FirstName">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="profile-form col-md-6">
                            <label class="labels">Surname</label>
                            <input asp-for="LastName" type="text" class="form-control" placeholder="@Model.LastName">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="profile-form col-md-12">
                            <label class="labels">Email</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="@Model.Email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="profile-form col-md-12">
                            <label class="labels">Phone Number</label>
                            <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="@Model.PhoneNumber">
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="profile-form col-md-6">
                            <label class="labels">City</label>
                            <input asp-for="City" type="text" class="form-control" placeholder="@Model.City">
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="profile-form col-md-6">
                            <label class="labels">State/Region</label>
                            <input asp-for="State" type="text" class="form-control" placeholder="@Model.State">
                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>
                        <div class="profile-form col-md-12">
                            <label class="labels">Country</label>
                            <input asp-for="Country" type="text" class="form-control" placeholder="@Model.Country">
                            <span asp-validation-for="Country" class="text-danger"></span>
                        </div>
                        <div class="profile-form col-md-12">
                            <label class="labels">LinkedIn</label>
                            <input asp-for="LinkedIn" type="text" class="form-control" placeholder="@Model.LinkedIn">
                            <span asp-validation-for="LinkedIn" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-success" value="Update Account">
                    </div>
                </form>
                <div>
                    <a asp-action="ChangePassword" asp-route-id="@Model.UserId" class="btn btn-info">Change Password</a>
                </div>
            </div>
        </div>
    </div>
</div>