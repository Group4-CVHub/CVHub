@model CVHub.Models.ChangePasswordUser

<link rel="stylesheet" href="~/css/myPage/MyPage.css" />
<link rel="images" href="~/css/myPage/images" />
<script src="~/js/MyPage/MyPage.js"></script>

<div class="container rounded shadow p-3 bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-3 border-right">
            <div class=" d-flex flex-column align-items-center text-center">
            </div>
        </div>
        <div class="col-md-6">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="text-right">My Page</h6>
                </div>
                <form method="post" asp-action="ChangePassword">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row mt-3">
                        <div class="profile-form col-md-6">
                            <label class="labels">Old Password</label>
                            <input asp-for="OldPassword" type="password" class="form-control" placeholder="Enter Old Password">
                            <span asp-validation-for="OldPassword" class="text-danger"></span>
                            <span class="text-danger">@ViewBag.Message</span>
                        </div>
                        <div class="profile-form col-md-6">
                            <label class="labels">New Password</label>
                            <input asp-for="NewPassword" type="password" class="form-control" placeholder="Enter New Password">
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-success" value="Update Password">
                    </div>
                </form>
                <div>
                    <a class="btn btn-danger" asp-action="Update">Go Back</a>
                </div>
            </div>
        </div>
    </div>
</div>