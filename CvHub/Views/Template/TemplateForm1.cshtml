@model CVHub.Models.CvTemp


<meta name="keywords" content="About Us, CV, Job Application, Help with CV, CVHub">
<link rel="stylesheet" href="~/css/template/templateform.css" />

<div class="container wholeform">

    <h5>Photo</h5>
    <form enctype="multipart/form-data" method="post" asp-controller="Cv" asp-action="Create1">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="custom-file col">
            <input asp-for="Picture" type="file" class="form-control custom-file-input"  >
            <label class="custom-file-label">Choose file</label>
        </div>







        <div class="col pl-0">
            <h5>Title</h5>
            <input asp-for="Title" type="text" class="form-control" placeholder="Job title">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>


        <h5>About me</h5>
        <textarea asp-for="AboutMe" class="form-control" type="text" placeholder="Tell us something about yourself. What are your interests and what makes you YOU!" aria-label="With textarea"></textarea>

        @*/ school *@

        <h5>Education</h5>
        @for (int i = 0; i < Model.Educations.Count; i++)
        {
            <div class="row">
                <div class="col">
                    School
                    <input asp-for="Educations[i].Name" type="text" class="form-control" placeholder="School">
                </div>
                <div class="col">
                    Start date
                    <input asp-for="Educations[i].EducationStart" type="date" class="form-control" placeholder="Date">
                </div>
                <div class="col">
                    End date
                    <input asp-for="Educations[i].EducationStop" type="date" class="form-control" placeholder="Date">
                </div>
                <div class="col">
                    Degree
                    <textarea asp-for="Educations[i].Degree" type="text" class="form-control" placeholder="Degree" aria-label="With textarea"></textarea>
                </div>
                <br />
            </div>
        }
        <button class="btn btn-light border mb-4" asp-action="AddEducation">Add education</button>


        @*/ workplace *@

        <h5>Work</h5>
        @for (int i = 0; i < Model.WorkPlaces.Count; i++)
        {
            <div class="row">

                <div class="col">
                    Workplace
                    <input asp-for="WorkPlaces[i].Name" type="text" class="form-control" placeholder="Workplace">
                </div>
                <div class="col">
                    Start date
                    <input asp-for="WorkPlaces[i].WorkStart" type="date" class="form-control" placeholder="Date">
                </div>
                <div class="col">
                    End date
                    <input asp-for="WorkPlaces[i].WorkStop" type="date" class="form-control" placeholder="Date">
                </div>
                <div class="col">
                    Description
                    <textarea asp-for="WorkPlaces[i].Description" type="text" class="form-control" placeholder="Description" aria-label="With textarea"></textarea>
                </div>
                <br />
            </div>
        }
        <button class="btn btn-light border mb-4" asp-action="AddWork">Add work place</button>
        <br />
        <button class="btn btn-primary" type="submit">Submit</button>

        @section Scripts{
            <script>
                $(document).ready(function () {
                    $('.custom-file-input').on("change", function () {
                        var fileName = $(this).val().split("\\").pop();
                        $(this).next('.custom-file-label').html(fileName);
                    });
                });
            </script>
        }
    </form>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>