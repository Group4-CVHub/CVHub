<meta name="keywords" content="About Us, CV, Job Application, Help with CV, CVHub">
<link rel="stylesheet" href="~/css/template/index.css" />


<div class="container">
    <h3 style="text-align:center;">Choose a template</h3>
    <div class="row templates" style="margin:8% auto 0 auto;">
        <div class="col">
            <img class="comingsoon" src="~/css/template/img/comingsoon.svg" style="width:70%" title="Elegant" alt="Elegant" />
        </div>
        <div class="col">
            <img src="~/css/template/img/cvimg.svg" style="width:70%" title="Minimalist" alt="Minimalist" />
        </div>

    </div>

    <div class="row templates" style="margin:4% auto auto auto;">
        <div class="col">
            <h5 style="margin-top:0.5%">Coming soon!</h5>
        </div>
        <div class="col">
            <a class="btn btn-primary" asp-controller="Template" asp-action="Template1">View</a> @*Should open the page Cv.cshtml*@
            <a class="btn btn-light" asp-controller="Template" asp-action="TemplateForm1">Choose</a>
        </div>
    </div>


</div>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
